{
  "name": "vulpee-back-end",
  "description": "Vulpee Booking Management System Back-end",
  "version": "0.0.1",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vulpee/back-end"
  },
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/auth": "^3.0.7",
    "@adonisjs/bodyparser": "^2.0.5",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/generic-exceptions": "^3.0.1",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/lucid": "^6.1.3",
    "@adonisjs/lucid-slugify": "^1.0.3",
    "@adonisjs/validator": "^5.0.6",
    "@bugsnag/js": "^5.1.0",
    "acler": "^1.0.0",
    "opencage-api-client": "^0.5.0",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@types/node-fetch": "^2.5.0",
    "commitlint": "^8.1.0",
    "cpx": "^1.5.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tsc-watch": "^2.4.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "start": "nodemon ./dist/server.js",
    "start:typescript": "npm run clean && npm run copy:files && tsc-watch",
    "build": "npm run clean && tsc && npm run copy:files",
    "copy:files": "cpx '.env' dist && cpx 'package.json' dist && cpx 'ace' dist",
    "clean": "rimraf dist/",
    "db:reset": "node ace migration:refresh && node ace seed --files database/seeds/UserSeeder.js && node ace seed --files database/seeds/PermissionSeeder.js && node ace seed --files database/seeds/EstablishmentSeeder.js && node ace seed --files database/seeds/RentalSeeder.js"
  },
  "autoload": {
    "App": "./app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  }
}
