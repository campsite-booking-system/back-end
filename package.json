{
  "name": "vulpee-back-end",
  "description": "Vulpee Booking Management System Back-end",
  "version": "0.0.1",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vulpee/back-end"
  },
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/antl": "^2.0.7",
    "@adonisjs/auth": "^3.0.7",
    "@adonisjs/bodyparser": "^2.0.5",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/generic-exceptions": "^3.0.1",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/lucid": "^6.1.3",
    "@adonisjs/lucid-slugify": "^1.0.3",
    "@adonisjs/mail": "^3.0.10",
    "@adonisjs/persona": "^1.0.5",
    "@adonisjs/validator": "^5.0.6",
    "@adonisjs/vow": "^1.0.17",
    "@bugsnag/js": "^5.1.0",
    "@vulpee/js-api": "^0.5.1",
    "opencage-api-client": "^0.5.0",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@types/node-fetch": "^2.5.0",
    "commitlint": "^8.1.0",
    "cpx": "^1.5.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tsc-watch": "^2.4.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "start": "nodemon ./dist/server.js",
    "start:typescript": "npm run clean && npm run copy:files && tsc-watch",
    "build": "npm run clean && tsc && npm run copy:files",
    "copy:files": "cpx 'ace' dist && ln -s ../.env dist/.env && ln -s ../package.json dist/package.json && ln -fs ../src/resources dist/resources && ln -fs ../node_modules dist/node_modules",
    "clean": "rimraf dist/ && mkdir dist",
    "lint": "tslint 'src/**/*.ts' --project tsconfig.json && prettier --check 'src/**/*.ts'",
    "test": "cpx '.env.testing' dist && node dist/ace test",
    "db:migrate": "node dist/ace migration:run",
    "db:reset": "node dist/ace migration:refresh && node dist/ace seed --files database/seeds/PermissionSeeder.js && node dist/ace seed --files database/seeds/RoleSeeder.js && node dist/ace seed --files database/seeds/EstablishmentSeeder.js && node dist/ace seed --files database/seeds/UserSeeder.js"
  },
  "autoload": {
    "App": "./app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  }
}
